<RelativeLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:padding="3dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:jcrystal="http://schemas.android.com/apk/res-auto">
    <RadioButton android:id="@+id/btn_radio"
        android:layout_alignBottom="@+id/txt_desc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>
    <TextView android:gravity="center_vertical"
        android:id="@+id/txt_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/btn_radio"
        android:layout_width="match_parent"
        android:textColor="@android:color/black"
        android:text="Name"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <TextView android:id="@+id/txt_desc"
        android:textColor="@android:color/black"
        android:layout_alignLeft="@+id/txt_name"
        android:layout_below="@+id/txt_name"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Description"
        android:textSize="14sp"/>
</RelativeLayout>
